extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Author Analytics
                form(method='GET' action='/searchAuthor')
                    div.form-group
                        label(for='authorName') Author Name:
                        input.form-control(type='text' id='authorName' placeholder='Author Name' name='authorName')
                    button.btn.btn-primary(type='submit') Search

                // this is div with ID "authorRevisions" to display the results here.
                #authorRevisions